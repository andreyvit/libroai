{
    "@all": {
        "RateLimits": {
            "web.r": {
                "app": {"PerSec": 10, "Burst": 10},
                "ip": {"PerSec": 10, "Burst": 10},
            },
            "web.w": {
                "app": {"PerSec": 10, "Burst": 10},
                "ip": {"PerSec": 10, "Burst": 10},
            },
            "spam": {
                "app": {"PerSec": 1, "Burst": 3},
                "ip": {"PerSec": 0.2, "Burst": 2},
            },
            "auth": {
                "app": {"PerSec": 1, "Burst": 3},
                "ip": {"PerSec": 0.2, "Burst": 3},
            },
            "danger": {
                "app": {"PerSec": 1, "Burst": 3},
                "ip": {"PerSec": 0.2, "Burst": 2},
            },
        },
        "MaxRateLimitRequestDelay": "5s",

        "EmailDefaultFrom": "libroai@tarantsov.com",
        "PostmarkDefaultMessageStream": "outbound",
        "SignInCodeExpiration": "15m",
        "SignInCodeResendInterval": "30s",

        "RootUserEmail": "andrey@tarantsov.com",
    },

    "@localdevortest": {
        "KeyringFile": ".keyring",
    },

    "@localdev": {
        "AutoEncryptSecrets": true,
        "DataDir": "_data",
        "BindAddr": "127.0.0.1",
        "BindPort": 3003,
        "WorkerCount": 1,
        "ServeAssetsFromDisk": true,
        "CrashOnPanic": true,
        "PrettyJSON": true,
        "BaseURL": "http://localhost:3003/",
        "AutoEncryptSecrets": true,
        "AllowInsecureHttp": true,
    },

    "local-andreyvit": {
        "AppID": "buddy-andrey",
        "AppName": "BuddyAndrey",
        "LocalOverridesFile": "config.local.json",
    },

    "local-dottedmag": {
        "AppID": "buddy-mag",
        "AppName": "BuddyMag",
    },

    "@prodlike": {
        "WorkerCount": 2,
    },

    "stag": {
        "AppID": "buddy-stag",
        "AppName": "BuddyStage",
    },

    "prod": {
        "AppID": "buddy",
        "AppName": "Buddy",
        "KeyringFile": "/srv/libroai/.keyring",
        "DataDir": "/srv/libroai/data",
        "LocalOverridesFile": "/srv/libroai/libroai.json",
        "BaseURL": "https://libroai.com/",
        "BindAddr": "127.0.0.1",
        "BindPort": 4001,
        "Deployment": {
            "Service": "libroai",
            "User": "andreyvit",
            "ServiceDir": "/srv/libroai",
        },
    },

    "test": {
        "AppName": "BuddyTest",
        "AppID": "buddy-test",
        "DataDir": "<temp>",
        "BindAddr": "127.0.0.1",
        "BindPort": 3001,
        "WorkerCount": 0,
        "ServeAssetsFromDisk": false,
        "CrashOnPanic": true,
        "PrettyJSON": false,
        "BaseURL": "http://localhost:3001/"
    },
}
